    link(rel='stylesheet' href='./styles/banner.css')
    link(rel='stylesheet' href='./styles/header.css')
    link(rel='stylesheet' href='./styles/login.css')
    link(rel='stylesheet' href='./styles/cards.css')
    link(rel='stylesheet' href='./styles/footer.css')
    link(rel='stylesheet' href='./styles/up-styles.css')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css')
  body(background='assets/images/back2.jpg')
    // login page start
    img.header__icon(src='assets/images/logo4.8z' alt='logo')
    #logreg-forms
      form.form-signin
        h1.h3.mb-3.font-weight-normal(style='text-align: center')
          | Sign in
        input#inputEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
        input#inputPassword.form-control(type='password' placeholder='Password' required='')
        button.btn.btn-success.btn-block(type='submit')
          i.fas.fa-sign-in-alt
          |  Sign in
        a#forgot_pswd(href='#') Forgot password?
        hr
        // <p>Don't have an account!</p>
        button#btn-signup.btn.btn-primary.btn-block(type='button')
          i.fas.fa-user-plus
          |  Sign up New Account
      form.form-reset(action='/reset/password/')
        input#resetEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
        button.btn.btn-primary.btn-block(type='submit')
          | Reset Password
        a#cancel_reset(href='#')
          i.fas.fa-angle-left
          |  Back
      form.form-signup(action='/signup/')
        h1.h3.mb-3.font-weight-normal(style='text-align: center')
          | Sign Up
        input#user-name.form-control(type='text' placeholder='Full name' required='' autofocus='')
        input#user-email.form-control(type='email' placeholder='Email address' required='' autofocus='')
        input#user-pass.form-control(type='password' placeholder='Password' required='' autofocus='')
        input#user-repeatpass.form-control(type='password' placeholder='Repeat Password' required='' autofocus='')
        br
        p How would you like to proceed as:
        input#user(type='radio' name='user-type' value='user')
        label(for='user') User
        br
        input#host(type='radio' name='user-type' value='host')
        label(for='host') Host
        br
        button.btn.btn-primary.btn-block(type='submit')
          i.fas.fa-user-plus
          |  Sign Up
        a#cancel_signup(href='#')
          i.fas.fa-angle-left
          |  Back
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
